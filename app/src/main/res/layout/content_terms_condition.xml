<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_terms_condition" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digma.masquerade.digma.ui.TermsConditionActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView android:id="@+id/txt_terms"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin" android:text="@string/large_text" />

        <CheckBox
            android:id="@+id/chk_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto tÃ©rminos y condiciones"
            android:layout_below="@+id/txt_terms"
            android:layout_centerHorizontal="true"
            />
        <!--
        <Spinner
            android:id="@+id/sp_genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chk_accept"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_genero"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:text="Fecha Nacimiento"
            />
        -->
        <LinearLayout
            android:layout_below="@+id/chk_accept"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_deny_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:background="@color/colorPrimary"
                android:textColor="@color/com_facebook_likebutton_text_color"
                android:layout_weight="1.0"
                />

            <Button
                android:id="@+id/btn_accept_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto"
                android:background="@color/colorPrimary"
                android:textColor="@color/com_facebook_likebutton_text_color"
                android:layout_weight="1.0"
                />
        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
